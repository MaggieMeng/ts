<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">

	<EditText android:id="@+id/EditText" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginTop="2px"
		android:hint="Input your keyword ..." android:maxLines="5"
		android:minLines="1" android:maxLength="142" android:layout_weight="1.0" android:autoLink="none" android:saveEnabled="true"
		android:inputType="textCapSentences|textAutoCorrect|textMultiLine">
	</EditText>


	<Button android:text="Send" android:id="@+id/Send"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="4.0">
	</Button>
</LinearLayout>